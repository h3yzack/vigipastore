{
    "name": "My Pass Vault",
    "dockerFile": "Dockerfile",
    "context": "..",
    "runArgs": ["--init", "--network=host"],

    "remoteEnv": {
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },

    "containerEnv": {
        "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-arm64"
    },

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "java.jdt.ls.java.home": "/usr/lib/jvm/java-17-openjdk-arm64"
            },
            "extensions": [
                "redhat.java",
                "vscjava.vscode-java-pack",
                "vscjava.vscode-gradle",
                "vscjava.vscode-java-debug",
                "vscjava.vscode-java-test",
                "dbaeumer.vscode-eslint",
                "redhat.vscode-yaml",
                "vmware.vscode-boot-dev-pack",
                "vscjava.vscode-lombok",
                "esbenp.prettier-vscode",
                "sonarsource.sonarlint-vscode",
                "gruntfuggly.todo-tree",
                "mutantdino.resourcemonitor"
                                // "kabirsarkar.spring-boot-gradle-extension-pack",
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/node:1": { "version": "20" },
        "ghcr.io/ebaskoro/devcontainer-features/sdkman:1": {
            "candidate": "gradle"
        },
        "ghcr.io/devcontainers/features/terraform:1": {}
    },

    "mounts": [
        "source=${localWorkspaceFolder},target=/app/${localWorkspaceFolderBasename},type=bind,consistency=cached"
    ],

    // "postCreateCommand": "bash -ic 'sdk install springboot 3.5.5'",
    // "postCreateCommand": "npm install --prefix frontend/react-app",

    "forwardPorts": [3000, 8080, 8081, 8082, 27017],

    "remoteUser": "vscode"
}